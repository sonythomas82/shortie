{
    "name": "shortie",
    "version": "1.0",
    "description": "Personal URL shortener",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Shortie Event",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "manifest_version": 2
}